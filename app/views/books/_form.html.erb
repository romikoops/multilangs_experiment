<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= t 'activerecord.errors.template.header', :model => Book.model_name.human, :count => @book.errors.count %></h2>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% Book.globalize_locales.each do |locale| %>
        <% attribute_name = "title_#{locale}"%>
        <div class="field">
          <%= f.label attribute_name, Book.human_attribute_name(attribute_name) %>
          <%= f.text_field attribute_name %>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :number_of_pages %><br />
      <%= f.number_field :number_of_pages %>
    </div>
    <div class="field">
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
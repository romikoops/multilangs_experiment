<div>
  <%= form_for @user, url: user_path(@user, locale: I18n.locale), html: {style: "float: right;", onchange: "this.submit()"} do |f| %>
      <%= f.label :locale %>
      <%= f.collection_select :locale, I18n.available_locales, :to_s, :to_s %>
  <% end %>
</div>
<%= yield %>
<script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
</script>
</body>
</html>
